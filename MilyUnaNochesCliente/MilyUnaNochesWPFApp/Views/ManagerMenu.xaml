<Page x:Class="MilyUnaNochesWPFApp.Views.ManagerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Background="#fdf8ef"
      Title="ManagerMenu">

    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AE7D5C"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="FontFamily" Value="Bodoni MT Condensed"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                        FocusVisualStyle="{x:Null}"
                        CornerRadius="2">
                            <ContentPresenter 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#8B4513"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="#8B4513"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        
        <Image x:Name="img_Logo" HorizontalAlignment="Left" Height="123" VerticalAlignment="Top" Width="253" Source="/Images/Icons/Logo.png"/>
        <Image x:Name="img_Logo2" HorizontalAlignment="Left" Height="94" Margin="28,29,0,0" VerticalAlignment="Top" Width="184" Source="/Images/Icons/Mil_y_una_Noches.png"/>
        
    

        <StackPanel 
            Margin="300,10,0,607" 
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            Width="1000">
            <Button Content="Ventas" Click="Sales_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Usuarios" Click="Users_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Productos" Click="Products_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Proveedores" Click="Suppliers_Click" Margin="30" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Reportes" Click="Reports_Click" Margin="30" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Compras" Click="Purchases_Click" Margin="30" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>

        <Frame x:Name="fra_mainFrame"
               Content="Frame" 
               Margin="0,128,0,0"
               Source="ManagerMenuContent.xaml">
        </Frame>

    </Grid>
</Page>

    
    