<Page x:Class="MilyUnaNochesWPFApp.Views.ManagerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Background="#fdf8ef"
      Title="ManagerMenu">

    <Grid>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="123" Margin="2,0,0,0" VerticalAlignment="Top" Width="250" Source="/Images/Icons/Logo_Manager_View.png"/>

        <StackPanel 
            Margin="411,10,0,607" 
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            Width="750">
            <Button Content="Ventas" Click="Sales_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="35" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
            <Button Content="Usuarios" Click="Users_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="35" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
            <Button Content="Productos" Click="Products_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="35" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
            <Button Content="Proveedores" Click="Providers_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="35" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
            <Button Content="Reportes" Click="Reports_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="35" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
        </StackPanel>

        <Frame x:Name="mainFrame"
               Content="Frame" 
               Margin="0,128,0,0"
               Source="ManagerMenuContent.xaml">
        </Frame>

    </Grid>
</Page>

    
    