<Page x:Class="MilyUnaNochesWPFApp.Views.FindProvider"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="413" d:DesignWidth="1280"
      Background="#fdf8ef"
      Title="FindProvider">

    <Page.Resources>
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Bodoni MT Condensed"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/Images/Background/BackgroundTextBlock.png"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchBar"
                 Grid.Row="0"
                 HorizontalAlignment="Left" 
                 Height="44" 
                 Margin="70,10,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="241" 
                 BorderBrush="{x:Null}" 
                 TextChanged="SearchBar_TextChanged"
                 BorderThickness="0" 
                 VerticalContentAlignment="Center"
                 FontSize="20"
                 FontFamily="Bodoni MT Condensed" 
                 Foreground="#FFAE7D5C" HorizontalContentAlignment="Center">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Background/Search.png"/>
            </TextBox.Background>
        </TextBox>

        <TextBlock x:Name="PlaceholderText" 
                   Grid.Row="0"
                   HorizontalAlignment="Left" 
                   Margin="113,21,0,0" 
                   IsHitTestVisible="False" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="22" 
                   Width="146" 
                   FontSize="18" 
                   FontFamily="Bodoni MT Condensed" 
                   Foreground="#FF6A6565">
            <Run Language="es-mx" Text="Nombre o contacto (ej. Lala)"/>
        </TextBlock>

        <DataGrid x:Name="ProviderDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="70,10,70,10"
                  Width="1150"
                  Background="#fdf8ef"
                  BorderThickness="0"
                  FontSize="18"
                  FontFamily="Bodoni MT Condensed" 
                  SelectionChanged="ProviderDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Proveedor" 
                                   Width="*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Contacto" 
                                   Width="*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Telefono" 
                                   Width=".7*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Correo" 
                                   Width="*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Direccion" 
                                   Width="1.5*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,10,10">
            <Button Content="Eliminar" Style="{StaticResource ButtonStyle}" Click="Eliminar_Click"/>
            <Button Content="Archivar" Style="{StaticResource ButtonStyle}" Click="Archivar_Click"/>
            <Button Content="Editar" Style="{StaticResource ButtonStyle}" Click="Editar_Click"/>
        </StackPanel>
    </Grid>
</Page>