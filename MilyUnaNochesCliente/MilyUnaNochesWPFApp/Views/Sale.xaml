<Page x:Class="MilyUnaNochesWPFApp.Views.Sale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="427" d:DesignWidth="1280"
      Background="#fdf8ef"
      Title="Sale">

    <Grid>
        <Label Content="Número de cliente" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="45,74,0,0" 
               VerticalAlignment="Top" 
               Width="130" FontSize="20" 
               FontFamily="Bodoni MT Condensed" 
               Foreground="#FFAE7D5C"/>
        <Label Content="Número de vendedor" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="45,6,0,0" 
               VerticalAlignment="Top" 
               Width="130" FontFamily="Bodoni MT Condensed" 
               FontSize="20" 
               Background="{x:Null}"
               Foreground="#FFAE7D5C"/>
        <Label Content="Número de productos" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="45,134,0,0" 
               VerticalAlignment="Top" 
               Width="130" FontFamily="Bodoni MT Condensed" 
               FontSize="20"
               Background="{x:Null}" 
               Foreground="#FFAE7D5C"/>
        <TextBox HorizontalAlignment="Left" 
                 Height="40" 
                 Margin="220,9,0,0" 
                 TextWrapping="Wrap" 
                 Text="Numero vendedor" 
                 VerticalAlignment="Top" 
                 Width="231"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" 
                 FontFamily="Bodoni MT Condensed" 
                 BorderBrush="{x:Null}" 
                 Name="txtNumeroVendedor" 
                 FontSize="20">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Background/BackgorundTextField.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox HorizontalAlignment="Left" 
                 Height="40" 
                 Margin="220,74,0,0" 
                 TextWrapping="Wrap" 
                 Text="Numero cliente" 
                 VerticalAlignment="Top" 
                 Width="231"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" 
                 FontFamily="Bodoni MT Condensed" 
                 BorderBrush="{x:Null}" 
                 FontSize="20" 
                 Name="txtNumeroCliente">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Background/BackgorundTextField.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox Name="txtNumeroProductos"
                 HorizontalAlignment="Left" 
                 Height="40" 
                 Margin="220,137,0,0" 
                 TextWrapping="Wrap" 
                 Text="Numero productos" 
                 VerticalAlignment="Top" 
                 Width="231"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" 
                 FontFamily="Bodoni MT Condensed" 
                 BorderBrush="{x:Null}" 
                 FontSize="20">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Background/BackgorundTextField.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="TOTAL A PAGAR" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="45,199,0,0" 
               VerticalAlignment="Top" 
               Width="182" 
               FontSize="20" 
               Background="{x:Null}"
               Foreground="#FFAE7D5C" 
               FontWeight="Bold"/>
        <Label Name="lblPrecio"
               Content="$$$" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="319,199,0,0" 
               VerticalAlignment="Top" 
               Width="115" Background="{x:Null}" 
               Foreground="#FFAE7D5C" 
               FontSize="20" 
               FontFamily="Rockwell"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
        <Button Content="CANCELAR COMPRA" 
                HorizontalAlignment="Left"
                Height="37"
                Margin="45,245,0,0"
                VerticalAlignment="Top"
                Width="203" 
                Foreground="#FFFDF8EF"
                BorderBrush="{x:Null}" 
                FontSize="16" 
                FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Background/BackgroundButton.png"/>
            </Button.Background>
        </Button>
        <Button Content="PAGAR" 
                HorizontalAlignment="Left"
                Height="37"
                Margin="146,301,0,0"
                VerticalAlignment="Top"
                Width="204" 
                Foreground="#FFFDF8EF"
                BorderBrush="{x:Null}"
                FontSize="16" 
                FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Background/BackgroundButton.png"/>
            </Button.Background>
        </Button>
        <Button Content="AÑADIR PRODUCTOS" 
                HorizontalAlignment="Left"
                Height="37"
                Margin="248,245,0,0"
                VerticalAlignment="Top"
                Width="203" 
                Foreground="#FFFDF8EF" 
                BorderBrush="{x:Null}"
                FontSize="16" 
                FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Background/BackgroundButton.png"/>
            </Button.Background>
        </Button>
        <!-- Sección de productos en el carrito -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="504,5,45,62">
            <WrapPanel Name="ProductsPanel" Orientation="Horizontal" ItemWidth="200" ItemHeight="300">
                <!-- Cada producto se agregará dinámicamente aquí -->
                <Border 
                        CornerRadius="10" 
                        Padding="10"
                        Width="180" 
                        Height="234" Background="White">
                    <StackPanel>
                        <Image Source="/Images/Products/Product1.png" 
                               Width="146" 
                               Height="145" 
                               Stretch="UniformToFill"/>
                        <TextBlock Text="Nombre del Producto" 
                                   FontWeight="Bold"
                                   FontSize="16" 
                                   TextAlignment="Center" 
                                   Foreground="#FFC18D5C"
                                   FontFamily="Bodoni MT Condensed"/>
                        <TextBlock Text="$0.00" 
                                   FontSize="16" 
                                   TextAlignment="Center" 
                                   FontFamily="Bodoni MT Condensed" 
                                   Foreground="#FFC18D5C"/>
                        <Button Content="Quitar del carrito" 
                                Background="#FFC18D5C" 
                                Foreground="White"
                                Margin="5" 
                                BorderBrush="{x:Null}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>
        <Grid Margin="211,226,128,233" 
              Visibility="Collapsed" 
              Name="gridSearchProduct">
            <Image HorizontalAlignment="Center" 
                   Height="232" 
                   Margin="0,24,0,0" 
                   VerticalAlignment="Top" 
                   Width="740" 
                   Source="/Images/Background/BackgroundEnterProduct.png"/>
            <TextBox HorizontalAlignment="Center"
                     Height="76" 
                     Margin="0,130,0,0" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top"
                     Width="416" 
                     BorderBrush="{x:Null}"
                     SelectionBrush="{x:Null}" 
                     VerticalContentAlignment="Center" 
                     HorizontalContentAlignment="Center" 
                     FontSize="20">
                <TextBox.Background>
                    <ImageBrush ImageSource="/Images/Background/BackgroundTextBlock.png"/>
                </TextBox.Background>
            </TextBox>

        </Grid>
        <Grid Name="gridFormPay" Visibility="Collapsed">
            <Image HorizontalAlignment="Center" 
                   Height="246" 
                   Margin="0,303,0,0" 
                   VerticalAlignment="Top" 
                   Width="598" 
                   Source="/Images/Background/BackgroundGrid.png"/>
            <Label Content="Forma de pago" 
                   HorizontalAlignment="Center"
                   Height="58" 
                   Margin="0,327,0,0" 
                   VerticalAlignment="Top"
                   Width="234" FontFamily="Bernard MT Condensed" FontWeight="Bold" FontSize="36" Foreground="White"/>
            <Button Content="EFECTIVO" 
                    HorizontalAlignment="Left" 
                    Height="46" 
                    Margin="438,401,0,0" 
                    VerticalAlignment="Top" 
                    Width="144" 
                    BorderBrush="{x:Null}" FontSize="20">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Background/BackgroundTextBlock.png"/>
                </Button.Background>
            </Button>
            <Button Content="TARJETA" 
                    HorizontalAlignment="Left"
                    Height="46" 
                    Margin="666,401,0,0"
                    VerticalAlignment="Top"
                    Width="144" 
                    BorderBrush="{x:Null}" FontSize="20">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Background/BackgroundTextBlock.png"/>
                </Button.Background>
            </Button>

        </Grid>
    </Grid>


</Page>
