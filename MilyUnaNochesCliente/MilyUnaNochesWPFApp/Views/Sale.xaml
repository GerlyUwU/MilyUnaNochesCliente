<Page x:Class="MilyUnaNochesWPFApp.Views.MenuSale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Background="#fdf8ef"
      Title="MenuSale">

    <Grid>
        <Image HorizontalAlignment="Center"
               Height="144" 
               Margin="0,73,0,0" 
               VerticalAlignment="Top" 
               Width="1280" 
               Source="/Images/Background/FrameSale.png"/>
        <Label Content="Número de cliente" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="59,361,0,0" 
               VerticalAlignment="Top" 
               Width="130" FontSize="20" 
               FontFamily="Bodoni MT Condensed" 
               Foreground="#FFAE7D5C"/>
        <Label Content="Número de vendedor" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="59,293,0,0" 
               VerticalAlignment="Top" 
               Width="130" FontFamily="Bodoni MT Condensed" 
               FontSize="20" 
               Background="{x:Null}"
               Foreground="#FFAE7D5C"/>
        <Label Content="Número de productos" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="59,421,0,0" 
               VerticalAlignment="Top" 
               Width="130" FontFamily="Bodoni MT Condensed" 
               FontSize="20"
               Background="{x:Null}" 
               Foreground="#FFAE7D5C"/>
        <TextBox HorizontalAlignment="Left" 
                 Height="40" 
                 Margin="234,296,0,0" 
                 TextWrapping="Wrap" 
                 Text="Numero vendedor" 
                 VerticalAlignment="Top" 
                 Width="231"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" 
                 FontFamily="Bodoni MT Condensed" 
                 BorderBrush="{x:Null}" 
                 Name="txtNumeroVendedor" 
                 FontSize="20">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Background/BackgorundTextField.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox HorizontalAlignment="Left" 
                 Height="40" 
                 Margin="234,361,0,0" 
                 TextWrapping="Wrap" 
                 Text="Numero cliente" 
                 VerticalAlignment="Top" 
                 Width="231"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" 
                 FontFamily="Bodoni MT Condensed" 
                 BorderBrush="{x:Null}" 
                 FontSize="20" 
                 Name="txtNumeroCliente">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Background/BackgorundTextField.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox Name="numeroProductos"
                 HorizontalAlignment="Left" 
                 Height="40" 
                 Margin="234,424,0,0" 
                 TextWrapping="Wrap" 
                 Text="Numero productos" 
                 VerticalAlignment="Top" 
                 Width="231"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" 
                 FontFamily="Bodoni MT Condensed" 
                 BorderBrush="{x:Null}" 
                 FontSize="20">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Background/BackgorundTextField.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="TOTAL A PAGAR" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="59,487,0,0" 
               VerticalAlignment="Top" 
               Width="182" 
               FontSize="20" 
               Background="{x:Null}"
               Foreground="#FFAE7D5C" 
               FontWeight="Bold"/>
        <Label Name="lblPrecio"
               Content="$$$" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="333,487,0,0" 
               VerticalAlignment="Top" 
               Width="115" Background="{x:Null}" 
               Foreground="#FFAE7D5C" 
               FontSize="20" 
               FontFamily="Rockwell"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
        <Button Content="CANCELAR COMPRA" 
                HorizontalAlignment="Left"
                Height="37"
                Margin="59,532,0,0"
                VerticalAlignment="Top"
                Width="203" 
                Foreground="#FFFDF8EF"
                BorderBrush="{x:Null}" 
                FontSize="16" 
                FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Background/BackgroundButton.png"/>
            </Button.Background>
        </Button>
        <Button Content="PAGAR" 
                HorizontalAlignment="Left"
                Height="37"
                Margin="160,588,0,0"
                VerticalAlignment="Top"
                Width="204" 
                Foreground="#FFFDF8EF"
                BorderBrush="{x:Null}"
                FontSize="16" 
                FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Background/BackgroundButton.png"/>
            </Button.Background>
        </Button>
        <Button Content="AÑADIR PRODUCTOS" 
                HorizontalAlignment="Left"
                Height="37"
                Margin="262,532,0,0"
                VerticalAlignment="Top"
                Width="203" 
                Foreground="#FFFDF8EF" 
                BorderBrush="{x:Null}"
                FontSize="16" 
                FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Background/BackgroundButton.png"/>
            </Button.Background>
        </Button>
    </Grid>


</Page>
