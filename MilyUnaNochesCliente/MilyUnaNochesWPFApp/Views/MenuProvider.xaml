<Page x:Class="MilyUnaNochesWPFApp.Views.MenuProvider"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Background="#fdf8ef"
      Title="MenuProvider">

    <Page.Resources>
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Image HorizontalAlignment="Center"
              Height="144" 
              Margin="0,123,0,0" 
              VerticalAlignment="Top" 
              Width="1280" 
              Source="/Images/Background/FrameProviders.png"/>

        <StackPanel 
            Margin="411,10,0,607" 
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            Width="700" 
            Grid.ColumnSpan="2">
            <Button Content="Ventas" Click="Button_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="27" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
            <Button Content="Usuarios" Click="Usuarios_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="27" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
            <Button Content="Productos" Click="Productos_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="27" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
            <Button Content="Proveedores" Click="Proveedores_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="27" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
            <Button Content="Reportes" Click="Reportes_Click" Margin="30" Background="Transparent" Foreground="#AE7D5C" FontSize="27" FontFamily="Bodoni MT Condensed" BorderThickness="0"/>
        </StackPanel>

        <StackPanel 
            Margin="0,650,23,10"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button Content="Eliminar" Click="Eliminar_Click" Margin="10" Background="Transparent" Foreground="#AE7D5C" FontSize="15" FontFamily="Bodoni MT Condensed" BorderThickness="1" Height="25" Width="80"/>
            <Button Content="Archivar" Click="Archivar_Click" Margin="10" Background="Transparent" Foreground="#AE7D5C" FontSize="15" FontFamily="Bodoni MT Condensed" BorderThickness="1" Height="25" Width="80"/>
            <Button Content="Editar" Click="Editar_Click" Margin="10" Background="Transparent" Foreground="#AE7D5C" FontSize="15" FontFamily="Bodoni MT Condensed" BorderThickness="1" Height="25" Width="80"/>
        </StackPanel>

        <StackPanel 
            Margin="476,257,0,413"
            Orientation="Horizontal"
            HorizontalAlignment="Left" 
            Width="374">
            <Button Content="Consultar Proveedores" Click="ConsultarProveedores_Click" Margin="0,0,30,0" Background="Transparent" Foreground="#AE7D5C" FontSize="20" FontFamily="Bodoni MT Condensed" BorderThickness="0" Height="38" Width="128"/>
            <Button Content="Registrar Proveedor" Click="RegistrarProveedor_Click" Margin="0,0,30,0" Background="Transparent" Foreground="#AE7D5C" FontSize="20" FontFamily="Bodoni MT Condensed" BorderThickness="0" Height="38" Width="147"/>
        </StackPanel>

        <TextBox x:Name="SearchBar"
                HorizontalAlignment="Left" 
                Height="44" 
                Margin="70,306,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="241" 
                BorderBrush="{x:Null}" 
                TextChanged="SearchBar_TextChanged"
                VerticalContentAlignment="Center"
                FontSize="20"
                FontFamily="Bodoni MT Condensed" 
                Foreground="#FFAE7D5C" HorizontalContentAlignment="Center">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Background/Search.png"/>
            </TextBox.Background>
        </TextBox>

        <TextBlock x:Name="PlaceholderText" HorizontalAlignment="Left" Margin="113,317,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="198" FontSize="18" FontFamily="Bodoni MT Condensed" Foreground="#FF6A6565"><Run Language="es-mx" Text="Nombre o contacto (ej. Lala)"/></TextBlock>

        <!-- DataGrid para mostrar los proveedores -->
        <DataGrid x:Name="ProviderDataGrid" 
                 AutoGenerateColumns="False"
                 HeadersVisibility="Column"
                 GridLinesVisibility="None"
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="52,382,0,0"
                 Width="1180"
                 Height="263"
                 Background="#fdf8ef"
                 BorderThickness="0"
                 FontSize="18"
                 FontFamily="Bodoni MT Condensed" SelectionChanged="ProviderDataGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Proveedor" 
                                   Width="*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Contacto" 
                                   Width="*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Telefono" 
                                   Width=".7*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Correo" 
                                   Width="*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Direccion" 
                                   Width="1.5*" 
                                   CellStyle="{StaticResource CenteredCellStyle}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="150" Margin="2,0,0,0" VerticalAlignment="Top" Width="250" Source="/Images/Icons/Logo.png"/>

    </Grid>

</Page>
