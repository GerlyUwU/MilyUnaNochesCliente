<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
        <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="MilyUnaNochesWPFApp.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
        </sectionGroup>
    </configSections>
    
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    
    <system.serviceModel>
        <bindings>
            <netTcpBinding>
                <!-- Configuración común para la mayoría de los servicios -->
                <binding name="CommonNetTcpBinding"
                         maxReceivedMessageSize="65536"
                         maxBufferSize="65536">
                    <reliableSession enabled="true" />
                    <security mode="None">
                        <transport sslProtocols="None" />
                    </security>
                </binding>
                
                <!-- Configuración especial para servicios con mensajes grandes -->
                <binding name="LargeMessageNetTcpBinding"
                         maxReceivedMessageSize="2147483647"
                         maxBufferSize="2147483647">
                    <reliableSession enabled="true" />
                    <security mode="None">
                        <transport sslProtocols="None" />
                    </security>
                </binding>
            </netTcpBinding>
        </bindings>
        
        <client>
            <!-- Endpoints actualizados usando configuraciones consolidadas -->
            <endpoint address="net.tcp://localhost:1441/UserService"
                      binding="netTcpBinding"
                      bindingConfiguration="CommonNetTcpBinding"
                      contract="MilyUnaNochesProxy.IUserManager"
                      name="NetTcpBinding_IUserManager" />

            <endpoint address="net.tcp://localhost:1441/AddressManager"
                      binding="netTcpBinding"
                      bindingConfiguration="CommonNetTcpBinding"
                      contract="MilyUnaNochesProxy.IAdressManager"
                      name="NetTcpBinding_IAdressManager" />

            <endpoint address="net.tcp://localhost:1441/ProviderManager"
                      binding="netTcpBinding"
                      bindingConfiguration="CommonNetTcpBinding"
                      contract="MilyUnaNochesProxy.IProviderManager"
                      name="NetTcpBinding_IProviderManager" />

            <endpoint address="net.tcp://localhost:1441/ProductsManager"
                      binding="netTcpBinding"
                      bindingConfiguration="LargeMessageNetTcpBinding"
                      contract="MilyUnaNochesProxy.IProductsManager"
                      name="NetTcpBinding_IProductsManager" />

            <endpoint address="net.tcp://localhost:1441/PurchaseManager"
                      binding="netTcpBinding"
                      bindingConfiguration="CommonNetTcpBinding"
                      contract="MilyUnaNochesProxy.IPurchaseManager"
                      name="NetTcpBinding_IPurchaseManager" />

            <endpoint address="net.tcp://localhost:1441/SaleManager"
                      binding="netTcpBinding"
                      bindingConfiguration="CommonNetTcpBinding"
                      contract="MilyUnaNochesProxy.ISaleManager"
                      name="NetTcpBinding_ISaleManager" />
        </client>
    </system.serviceModel>

    <log4net>
        <appender name="File" type="log4net.Appender.RollingFileAppender">
            <file value="logs/logfile.txt" />
            <appendToFile value="true" />
            <rollingStyle value="Composite" />
            <maxSizeRollBackups value="10" />
            <maximumFileSize value="2MB" />
            <datePattern value="yyyyMMdd" />
            <staticLogFileName value="true" />
            <preserveLogFileNameExtension value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
            </layout>
        </appender>
        
        <root>
            <level value="Warn" />
            <appender-ref ref="File" />
        </root>
    </log4net>
</configuration>